{
  "version": "0.2.0",
  "configurations": [
    {
      
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "0.0.0.0",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/flask-api",
          "remoteRoot": "/app"
        }
      ],
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",  
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false,
    }
  ]
}